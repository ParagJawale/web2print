                <value>true</value>
            </is_show_leafs>
            <is_remove_no_read_access_elements>
                <value>true</value>
            </is_remove_no_read_access_elements>
            <expand_inital_depth>
                <value>1</value>
            </expand_inital_depth>
            <get_parent>
                <value>
                    <object code="web2print.print_template:category.templates:get_parent" objectdef="jscript" module="core" >
                        <params>
                            <value>                                     
                                <object code="element" module="core" objectdef="script_param"></object>
                            </value>
                        </params>   
                        <script_code>
                            <value><![CDATA[
if (element instanceof db.web2print.print_template)
    return element.category;
return element.parent;
                            ]]></value>
                        </script_code>
                    </object>                                   
                </value>
            </get_parent>

            <set_parent>
                <value>
                    <object code="web2print.template:print_category.templates.clones:set_parent" module="core" objectdef="jscript">
                        <params>
                            <value>
                                <object code="object" module="core" objectdef="script_param"></object>
                            </value>
                            <value>
                                <object code="paths" module="core" objectdef="script_param"></object>
                            </value>
                            <value>
                                <object code="objectdef" module="core" objectdef="script_param"></object>
                            </value>
                        </params>
                        <script_code>
                            <value><![CDATA[
if (!paths)
    return;
for (var k=0;k<paths.length;k++)
{
    var path = paths[k];
    for (var i = path.length-1;i>=0;i--) 
    {
        if (path[i] instanceof db.web2print.print_category)  
        { 
            if (object instanceof db.web2print.print_template) {
	            object.parent=path[i];
	            return;
            } else if (object instanceof db.web2print.print_template) {
                object.category=path[i];
                return;
            }      
        } else if (path[i] instanceof db.web2print.print_template) {
            if (object instanceof db.web2print.print_template) {
	            object.parent=path[i].category;
	            return;
            } else if (object instanceof db.web2print.print_template) {
		        object.template=path[i];
                object.category=path[i].category;
                return;
            }      
        }            
    }
}
]]></value>
                        </script_code>
                    </object>
                </value>
            </set_parent>
        </object>


